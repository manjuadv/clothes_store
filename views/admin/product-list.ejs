<h1 class="display-4">All the products in the store</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            <% products.forEach(function(product){%>
                <tr>
                    <td><%= product.id %></td>
                    <td><%= product.name %></td>
                    <td>
                        <a href="/product/edit/<%= product.id %>" class="btn btn-info">Edit</a>
                        <form class="d-inline" action="/product/delete/<%= product.id %>" method="POST">
                        <input type="submit" value="Delete" class="btn btn-danger">
                        </form>
                    </td>
                </tr>
    
            <%}) %>
    </tbody>
</table>

